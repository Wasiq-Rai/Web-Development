}

.neumorphic-sidebar ul ul {
  margin-left: 20px;
}

.neumorphic-sidebar ul ul li {
  background-color: #646568;
  box-shadow: 2px 2px 4px 0 rgba(0, 0, 0, 0.1),
              -2px -2px 4px 0 rgba(255, 255, 255, 0.2);
}

.neumorphic-sidebar ul ul li a:hover {
  background-color: #4b5057;
}
#show-all-events-btn {
    background-color: #4CAF50; /* Set the background color */
    color: white; /* Set the text color */
    padding: 10px 20px; /* Set padding */
    font-size: 16px; /* Set the font size */
    border: none; /* Remove the border */
    cursor: pointer; /* Add cursor hover effect */
    border-radius: 4px; /* Add rounded corners */
  }

  /* Button hover effect */
  #show-all-events-btn:hover {
    background-color: #45a049; /* Change the background color on hover */
  }

</style>

<script>
  const showAllEventsButton = document.getElementById('show-all-events-btn');
  const eventsContainer = document.getElementById('events-row');

  showAllEventsButton.addEventListener('click', () => {
    eventsContainer.style.display = 'block';
  });
</script>