  justify-content: center;
}

.card {
  background-color: #e0e5ec;
  box-shadow: 4px 4px 8px 0 rgba(0, 0, 0, 0.2),
              -4px -4px 8px 0 rgba(255, 255, 255, 0.5);
  border-radius: 10px;
  padding: 10px;
  margin: 10px;
  transition: box-shadow 0.3s ease-in-out;
}

.card:hover {
  box-shadow: 6px 6px 12px 0 rgba(0, 0, 0, 0.2),
              -6px -6px 12px 0 rgba(255, 255, 255, 0.5);
}

.card-body {
  padding: 10px;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 10px;
}

.card-text {
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 8px;
}

strong {
  font-weight: bold;
}
.neumorphic-sidebar {
  background-color: #4c4f53;
  box-shadow: 4px 4px 8px 0 rgba(0, 0, 0, 0.2),
              -4px -4px 8px 0 rgba(37, 36, 36, 0.5);
  border-radius: 10px;
  padding: 10px;
}

ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

li {
  margin-bottom: 10px;
}

a {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: inherit;
}

i {
