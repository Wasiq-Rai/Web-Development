}

.fa-angle-right {
  margin-left: auto;
  transform: rotate(90deg);
}

ul ul {
  margin-left: 20px;
}

.neumorphic-sidebar ul li {
  background-color: #e0e5ec;
  box-shadow: 4px 4px 8px 0 rgba(0, 0, 0, 0.2),
              -4px -4px 8px 0 rgba(255, 255, 255, 0.5);
  border-radius: 10px;
  padding: 10px;
  margin-bottom: 10px;
}

.neumorphic-sidebar ul li a {
  display: flex;
  align-items: center;
  text-decoration: none;
  color: inherit;
}

